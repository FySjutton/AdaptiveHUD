{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "name": {
      "type": "string",
      "pattern": "^[^\\s]+$"
    },
    "value": {
      "type": "string"
    },
    "textColor": {
      "type": "string",
      "pattern": "^#[A-Fa-f0-9]{8}$"
    },
    "posX": {
      "type": "integer"
    },
    "posY": {
      "type": "integer"
    },
    "shadow": {
      "type": "boolean"
    },
    "background": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "paddingX": {
          "type": "integer"
        },
        "paddingY": {
          "type": "integer"
        },
        "backgroundColor": {
          "type": "string",
          "pattern": "^#[A-Fa-f0-9]{8}$"
        }
      },
      "required": ["enabled", "paddingX", "paddingY", "backgroundColor"]
    },
    "alignment": {
      "type": "object",
      "properties": {
        "anchorPointX": {
          "type": "integer"
        },
        "anchorPointY": {
          "type": "integer"
        },
        "textAlignX": {
          "type": "integer"
        },
        "textAlignY": {
          "type": "integer"
        }
      },
      "required": ["anchorPointX", "anchorPointY", "textAlignX", "textAlignY"]
    },
    "requirement": {
      "type": "object",
      "properties": {
        "renderRequirement": {
          "type": "string"
        }
      },
      "required": ["renderRequirement"]
    },
    "advanced": {
      "type": "object",
      "properties": {
        "scale": {
          "type": "integer"
        }
      },
      "required": ["scale"]
    }
  },
  "required": ["enabled", "name", "value", "textColor", "posX", "posY", "shadow", "background", "alignment", "requirement", "advanced"]
}
